@model Flyturismo.Models.Hospedagem

@{
    ViewData["Title"] = "Hospedagem";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<p class="display-4">Editando Hospedagem</p>
<p class="h2">Para alterar dados desse Hospedagem utilize o formulário abaixo.</p>
<hr />
<div class="row jumbotron jumbotron-fluid bg-secondary text-white">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id_Hospedagem" />
            <div class="form-group">
                <label asp-for="Tipo_Hospedagem" class="control-label">Tipo de Hospedagem</label>
                <p class="text-black-50">Ex: resort, hotel ou um nome de hospedagem...</p>
                <input asp-for="Tipo_Hospedagem" class="form-control" />
                <span asp-validation-for="Tipo_Hospedagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data_Entrada" class="control-label"> Data de entrada</label>
                <input asp-for="Data_Entrada" class="form-control" />
                <span asp-validation-for="Data_Entrada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data_Saida" class="control-label">Data de saída</label>
                <input asp-for="Data_Saida" class="form-control" />
                <span asp-validation-for="Data_Saida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-info text-white" />
            </div>
        </form>

        <a asp-action="Index" class="btn btn-dark text-white border border-white">&#8592;</a>
    </div>
</div>



</body>
</html>
