@model Flyturismo.Models.Hospedagem

@{
    ViewData["Title"] = "Hospedagem";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="withh=device-withh" />
    <title>Apagar</title>
</head>
<body>



<div class="text-center text-danger" >
    <p class="h2">Tem Certeza que deseja apagar os dados dessa Hospedagem?</p>
     <form asp-action="Delete">
            <input type="hidden" asp-for="Id_Hospedagem" />
            <input type="submit" value="Apagar" class="btn btn-danger border  m-3" /> 
            <a asp-action="Index" class="btn btn-dark text-white border m-3">&#8592;</a>
        </form>
    <hr />

    <table class="table table-hover table-dark">
            <tr>
        <th class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo_Hospedagem)
        </th>
        <td class = "col-sm-10">
            @Html.DisplayFor(model => model.Tipo_Hospedagem)
        </td>

        </tr>

        <tr>
        <th class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Data_Entrada)
        </th>
        <td class = "col-sm-10">
            @Html.DisplayFor(model => model.Data_Entrada)
        </td>
        </tr>

        <tr>
        <th class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Data_Saida)
        </th>
        <td class = "col-sm-10">
            @Html.DisplayFor(model => model.Data_Saida)
        </td>
        </tr>
         

    </table>

       
    
    
</div>
</body>
</html>
