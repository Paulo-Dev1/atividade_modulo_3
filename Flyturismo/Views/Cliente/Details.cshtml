@model Flyturismo.Models.Cliente

@{
    ViewData["Title"] = "Cliente";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

<div class="text-center">
    
    <hr />
    <p class="display-4">Informações do Usuário </p>

    <table class="table table-hover table-dark ">
        <tr>
        <th class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <td class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </td>
        </tr>

        <tr>
        <th class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Idade)
        </th>
        <td class = "col-sm-10">
            @Html.DisplayFor(model => model.Idade)
        </td>
        </tr>

        <tr>
        <th class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CPF)
        </th>
        <td class = "col-sm-10">
            @Html.DisplayFor(model => model.CPF)
        </td>
        </tr>

        <tr>
        <th class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <td class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </td>
        </tr>

        <tr>
        <th class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Endereco)
        </th>
        <td class = "col-sm-10">
            @Html.DisplayFor(model => model.Endereco)
        </td>
        </tr>

        <tr>
        <th class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Destino)
        </th>
        <td class = "col-sm-10">
            @Html.DisplayFor(model => model.Destino.Cidade)
        </td>
        </tr>

        <tr>
        <th class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Hospedagem)
        </th>
        <td class = "col-sm-10">
            @Html.DisplayFor(model => model.Hospedagem.Data_Entrada)
        </td>
        </tr>

       

    </table>

     <a asp-action="Edit" asp-route-id="@Model.Id_Cliente" class="btn btn-info text-white  m-3">Editar</a> 
    <a asp-action="Index" class="btn btn-dark text-white  m-3">&#8592;</a>
</div>

    

</body>
</html>
