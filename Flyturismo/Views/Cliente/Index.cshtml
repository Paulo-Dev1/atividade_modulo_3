@model IEnumerable<Flyturismo.Models.Cliente>

@{
    ViewData["Title"] = "Cliente";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <div class="text-center m-4">
        <p class="display-4">Novo aqui?</p>
        <p><a asp-action="Create" class=" btn btn-success text-white border border-dark" >Cadastre-se</a></p>

        <img class="m-3 w-25 img-fluid border border-info" src="https://images.pexels.com/photos/4049990/pexels-photo-4049990.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940" alt="" srcset="">
 

    </div>

<table class="table">
    <thead>
        <tr class=" bg-dark text-white">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hospedagem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-info">
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destino.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hospedagem.Data_Entrada)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_Cliente" class="btn btn-outline-info">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id_Cliente" class="btn btn-outline-info">Mostrar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_Cliente" class="btn btn-outline-info">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>


</body>
</html>
