@model Flyturismo.Models.Cliente

@{
    ViewData["Title"] = "Cliente";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<p class="display-4">Editando Usu치rio</p>
