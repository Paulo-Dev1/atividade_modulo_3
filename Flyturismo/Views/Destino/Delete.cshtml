@model Flyturismo.Models.Destino

@{
    ViewData["Title"] = "Destino";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Apagar</title>
</head>
<body>


<div class="text-center">
    <p class="h2">Tem Certeza que deseja apagar os dados desse Destinos?</p>
            <form asp-action="Delete">
            <input type="hidden" asp-for="Id_Destino" />
            <input type="submit" value="Apagar" class="btn btn-danger  m-3" /> 
            <a asp-action="Index" class="btn btn-dark text-white  m-3">&#8592;</a>
            </form>
    

    <hr />
    <table class="table table-hover table-dark ">
        <tr>
        <th class = "col-sm-2 ">
            @Html.DisplayNameFor(model => model.Cidade)
        </th>
        <td class = "col-sm-10 ">
            @Html.DisplayFor(model => model.Cidade)
        </td>
        </tr>

         <tr>
        <th class = "col-sm-2 ">
            @Html.DisplayNameFor(model => model.Pais)
        </th>
        <td class = "col-sm-10 ">
            @Html.DisplayFor(model => model.Pais)
        </td>
        </tr>
            
    </table>

           
  
</div>
</body>
</html>
