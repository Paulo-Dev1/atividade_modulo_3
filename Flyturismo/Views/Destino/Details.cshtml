@model Flyturismo.Models.Destino

@{
    ViewData["Title"] = "Destino";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

<div class="text-center">
    <p class="display-4">Detalhamento do seu Destino </p>
    <hr />
    <table class="table table-hover table-dark ">

        <tr>
        <th class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cidade)
        </th>
        <td class = "col-sm-10">
            @Html.DisplayFor(model => model.Cidade)
        </td>
        </tr>

        <tr>

        <th class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pais)
        </th>
        <td class = "col-sm-10">
            @Html.DisplayFor(model => model.Pais)
        </td>

        </tr>
    </table>

        <a asp-action="Edit" asp-route-id="@Model.Id_Destino" class="btn btn-info text-white m-3">Editar</a> 
        
        <a asp-action="Index" class="btn btn-dark text-white m-3">&#8592;</a>
</div>

</body>
</html>
